<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="295dp"
    android:layout_height="194dp"
    android:background="@mipmap/loading_pop">

    <TextView
        android:id="@+id/watch_video_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="温馨提示"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/watch_video_dialog_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/watch_video_dialog_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:lineSpacingMultiplier='1.3'
        android:paddingLeft="32dp"
        android:paddingRight="28dp"
        android:text="您需要完整观看2次视频才可以解锁使用哦！\n您现在已经观看了1次，再观看一次就可以打开使用了！"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/watch_video_dialog_des"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <TextView
            android:id="@+id/watch_video_dialog_btn_cancel"
            android:layout_width="85dp"
            android:layout_height="34dp"
            android:background="@mipmap/loading_btn_yellow"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="10" />

        <TextView
            android:id="@+id/watch_video_dialog_btn_affirm"
            android:layout_width="85dp"
            android:layout_height="34dp"
            android:background="@mipmap/loading_btn_yellow"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:text="观看"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>


</RelativeLayout>